<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoanEligibilityActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/textview_personal_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Check Loan Eligibility"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/colorAccent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"

            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"

            android:layout_marginRight="8dp"
            android:shrinkColumns="1"
            android:stretchColumns="*"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textview_personal_title">

            <TableRow
                android:id="@+id/tableRow"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textview_personal_firstLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="First" />

                <TextView
                    android:id="@+id/edittext_personal_first"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:enabled="false"
                    android:focusable="false"
                    android:hint="First Name"
                    android:inputType="none" />
            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textview_personal_surnamelabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Surname" />

                <TextView
                    android:id="@+id/edittext_personal_surname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:focusable="false"
                    android:hint="Surname"
                    android:inputType="none" />
            </TableRow>



            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textview_personal_genderlabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender" />


                <TextView
                    android:id="@+id/edittext_personal_gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textview_personal_maritallabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Married" />


                <TextView
                    android:id="@+id/edittext_personal_marital"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:hint="Y/N"/>
            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textview_personal_dependentslabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dependents" />


                <TextView
                    android:id="@+id/edittext_personal_dependents"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textview_personal_educationlabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Graduate" />


                <TextView
                    android:id="@+id/edittext_personal_education"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint="Y/N"/>
            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textview_personal_selfemployedlabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Self Employed" />


                <TextView
                    android:id="@+id/edittext_personal_selfemployed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint = "Y/N"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textview_personal_applicantincomelabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Applicant Income" />


                <TextView
                    android:id="@+id/edittext_personal_applicantincome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="100000"
                    android:inputType="textPersonName" />
            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textview_personal_coapplicantincomelabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Co-Applicant Income" />


                <TextView
                    android:id="@+id/edittext_personal_coapplicantincome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="100000"
                    android:inputType="textPersonName" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textview_personal_credithistorylabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Credit History" />


                <TextView
                    android:id="@+id/edittext_personal_credithistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint = "Y/N"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textview_propertyarea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Property Area" />


                <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RadioButton android:id="@+id/urban"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Urban"
                        android:onClick="onRadioButtonClicked"/>
                    <RadioButton android:id="@+id/rural"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rural"
                        android:onClick="onRadioButtonClicked"/>
                    <RadioButton android:id="@+id/semirural"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Suburbs"
                        android:onClick="onRadioButtonClicked"/>
                </RadioGroup>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textview_loan_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loan Amount" />


                <EditText
                    android:id="@+id/edittext_loan_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textview_loan_term"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loan Term" />


                <EditText
                    android:id="@+id/edittext_loan_term"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint= "Years"/>
            </TableRow>
        </TableLayout>


        <Button
            android:id="@+id/button_check_eligibility"
            android:layout_width="148dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_corners_button"
            android:text="Check Eligibility"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            app:layout_constraintBottom_toTopOf="@id/tv_displAns"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

        <TextView
            android:id="@+id/tv_displAns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ems="40"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_check_eligibility" />

        <Button
            android:id="@+id/button_apply"
            android:layout_width="148dp"
            android:layout_height="29dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_corners_button"
            android:text="Apply now"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_displAns" />

        <Button
            android:id="@+id/button_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_corners_button"
            android:text="Save this application"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_apply" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>